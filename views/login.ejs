<%- include ('partials/header-initial.ejs') %>

    <!--login form-->
    <main class="login-form">
        <div class="login-cotainer">
            <div class="row login-form-ad justify-content-center">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <form class="loginform" action="/login" method="POST">
                                <div class="form-group row">
                                    <label for="email"
                                        class="col-md-4 col-form-label text-md-right">E-Mail</label>
                                    <div class="col-md-6">
                                        <input type="text" id="email" class="form-control"
                                            name="email" required autofocus>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label for="password"
                                        class="col-md-4 col-form-label text-md-right">Password</label>
                                    <div class="col-md-6">
                                        <input type="password" id="password" class="form-control"
                                            name="password" required>
                                    </div>
                                </div>

                                <div class="login-button col-md-6 offset-md-4">
                                    <button type="submit" class="btn btn-success" href="/home">
                                        <strong>Log In</strong>
                                    </button>
                                </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</div>
</main>        


<%- include ('partials/footer.ejs') %>